{
  "buildCommand": "vite build",
  "outputDirectory": "dist",
  "installCommand": "npm install",
  "rewrites": [
    {
      "source": "/api/webhook",
      "destination": "/api/index.py"
    },
    {
      "source": "/image.php",
      "destination": "/api/index.py"
    },
    {
      "source": "/monitor.php",
      "destination": "/api/index.py"
    },
    {
      "source": "/api/(.*)",
      "destination": "/api/index.py"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
